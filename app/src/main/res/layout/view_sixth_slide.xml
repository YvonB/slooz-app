<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginRight="2pt">

    <Button
        android:id="@+id/view_sixth_slide_a_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:text="@string/stay_in"
        android:background="@drawable/btn_1"
        tools:ignore="Suspicious0dp"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/view_sixth_slide_b_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        tools:ignore="Suspicious0dp"
        android:text="@string/akama_trois"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:background="@drawable/btn_2"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/view_sixth_slide_c_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:text="@string/akama_sept"
        tools:ignore="Suspicious0dp"
        android:textAlignment="center"
        android:background="@drawable/btn_3"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/view_sixth_slide_d_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:text="@string/be_500"
        tools:ignore="Suspicious0dp"
        android:textAlignment="center"
        android:background="@drawable/btn_4"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/view_sixth_slide_e_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:text="@string/be_1000"
        tools:ignore="Suspicious0dp"
        android:textAlignment="center"
        android:background="@drawable/btn_5"
        android:textSize="10sp"/>

</LinearLayout>
